<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mymusicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicApp">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".allSongsActivity"
            android:label="@string/all_songs" />
        <activity android:name=".lastAddedActivity"
            android:label="@string/last_added" />
        <activity android:name=".mostPlayedActivity"
            android:label="@string/Most_Played" />
        <activity android:name=".FavouritesActivity"
            android:label="@string/favourites" />
        <activity android:name=".AlbumsActivity"
            android:label="@string/albums" />
        <activity android:name=".GenresActivity"
            android:label="@string/Genres" />
        <activity android:name=".ArtistsActivity"
            android:label="@string/Artists" />
        <activity android:name=".RecordsActivity"
            android:label="@string/Records" />
        <activity android:name=".FoldersActivity"
            android:label="@string/Folders" />
        <activity android:name=".NewActivity"
            android:label="@string/New" />
    </application>

</manifest>